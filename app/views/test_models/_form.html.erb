<%= form_for(@test_model, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @test_model.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@test_model.errors.count, "error") %> prohibited this test_model from being saved:</h4>

      <ul>
      <% @test_model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :published, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :published, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :publish_at, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :publish_at, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :conversion_rate, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :conversion_rate, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :views_counter, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :views_counter, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
     <%= f.select :state_id, options_from_collection_for_select(State.all, "id", "name"), {}, { :class => 'form-control' } %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :city_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.select :city_id, options_from_collection_for_select(City.all, "id", "name"), {}, { :class => 'form-control' } %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
